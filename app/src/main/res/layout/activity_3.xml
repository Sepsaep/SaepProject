<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sepsaep.saepquiz.Activity3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="#e70d0d"
        android:gravity="center_horizontal"
        android:text="Question 2"
        android:textColor="#ffffff"
        android:textSize="32sp"
        tools:ignore="HardcodedText" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:src="@drawable/pancasila"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Which is the principles of Pancasila ?"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center_horizontal"
        android:text="( chose 2 ) "
        android:textSize="14sp"
        tools:ignore="HardcodedText" />

    <CheckBox
        android:id="@+id/cb_panca_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A Divinity that is an ultimate unity" />

    <CheckBox
        android:id="@+id/cb_panca_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Indonesian Nationalism" />

    <CheckBox
        android:id="@+id/cb_panca_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The national unity of Indonesia" />

    <CheckBox
        android:id="@+id/cb_panca_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indonesia is a multicultural nation"
        android:checked="true"/>

    <Button
        android:id="@+id/button_next3"
        android:onClick="btnNext3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Next"
        android:layout_gravity="center"/>



</LinearLayout>